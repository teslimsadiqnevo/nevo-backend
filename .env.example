# Application
APP_NAME=Nevo
APP_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/nevo_db
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI - Google Gemini
GOOGLE_API_KEY=your-google-api-key
GEMINI_MODEL=gemini-pro

# AI - OpenAI (optional backup)
OPENAI_API_KEY=your-openai-api-key

# Cloud Storage - AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=nevo-lessons

# Cloud Storage - Google Cloud (alternative)
GCP_PROJECT_ID=your-gcp-project
GCS_BUCKET_NAME=nevo-lessons

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@nevo.com

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Logging
LOG_LEVEL=INFO
